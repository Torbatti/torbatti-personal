<body class="bgc1">
  <div class="bg-effect">
    <div class="ball b1"></div>
    <div class="ball b2"></div>

    <div class="ball b3"></div>
    <div class="ball b4"></div>

    <div class="ball b5"></div>
    <div class="ball b6"></div>

    <div class="ball b7"></div>
    <div class="ball b8"></div>

    <div class="ball b9"></div>
    <div class="ball b10"></div>
    
  </div>
  <slot/>
</body>

<style>
  .bg-effect{
    width:100%;

    overflow:hidden;
    height:calc(100vh - 3rem);
    position:absolute;
    left:0;
    top:0;
    z-index:-1000;
  }

  .ball{
    position:fixed;
    animation: background-size 10s infinite;

  }

  .b1,.b3,.b5,.b7,.b9{
    opacity: .45;
    left:0;bottom:0;
    background-image:  radial-gradient(var(--c3) 0.8px, transparent 0.8px), radial-gradient(var(--c3) 0.8px, var(--c1) 0.8px);
    background-size: 32px 32px;
    background-position: 0 0,16px 16px;

    --start_size: 0vh;
    --mid_size: 400vh;
  }
  .b2,.b4,.b6,.b8,.b10{
    background-color:var(--c1);
    left:0;bottom:0;

    --start_size: 0vh;
    --mid_size: calc(400vh - 25vh);
  }
  
  .b1,.b2{animation-delay:calc( 10s + .0s);}
  .b3,.b4{animation-delay:calc( 10s + .25s);}
  .b5,.b6{animation-delay:calc( 10s + .5s);}
  .b7,.b8{animation-delay:calc( 10s + .75s);}
  .b9{animation-delay:calc(     10s + 1s);}
  .b10{animation-delay:calc(    10s + 3s);}

@keyframes background-size{
  from
  {
    height:var(--start_size);width:var(--start_size);
    border-radius:0 var(--start_size) 0 0;
  }
  to
  {
    height:var(--mid_size);width:var(--mid_size);
    border-radius:0 var(--mid_size) 0 0;
  }
  
}

</style>