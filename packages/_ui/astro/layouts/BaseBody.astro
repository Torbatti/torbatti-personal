<body class="bgc1">
  <div class="box bg-effect">
    <div class="ball b1"></div>
    <div class="ball b2"></div>

    <div class="ball b3"></div>
    <div class="ball b4"></div>

    <div class="ball b5"></div>
    <div class="ball b6"></div>

    <div class="ball b7"></div>
    <div class="ball b8"></div>

    <div class="ball b9"></div>
    <div class="ball b10"></div>
    
  </div>
  <slot/>
</body>

<style>
  .bg-effect{
    width:100%;

    overflow:hidden;
    height:calc(100vh - 3rem);
    position:absolute;
    left:0;
    top:0;
    z-index:-1000;
  }

  .ball{
    position:fixed;

  }

  .b1,.b3,.b5,.b7,.b9{
    animation: background-size 30s infinite , opacity-change 30s infinite;


    /* opacity: 1;
    background-image:  radial-gradient(var(--c3) 0.8px, transparent 0.8px), radial-gradient(var(--c3) 0.8px, var(--c1) 0.8px);
    background-size: 32px 32px;
    background-position: 0 0,16px 16px; */

    opacity: 0.4;
    background: repeating-linear-gradient(135deg, var(--c3) 0, var(--c3) 10%, transparent 0, transparent 50%);
    background-size: 6px 6px;

    --start_size: 0vh;
    --mid_size: 15rem;

    --start-opacity:  .4;
    --end-opacity:    .0;
  }
  .b3,.b7
  {
    background: repeating-linear-gradient(45deg, var(--c3) 0, var(--c3) 10%, transparent 0, transparent 50%);
    background-size: 6px 6px;
  }
  .b2,.b4,.b6,.b8,.b10{
    animation: background-size 30s infinite , opacity-change 30s infinite;

    background-color:var(--c3);
    left:0;bottom:0;

    --start_size: 0vh;
    --mid_size: calc(15rem - 5rem);

    --start-opacity:  .025;
    --end-opacity:    .0;
  }
  .b10{
    background-color:var(--c1);
    --start-opacity:  .8;
    --end-opacity:    .0;
  }
  
  .b1,.b2{animation-delay:calc( 0s + .0s);}
  .b3,.b4{animation-delay:calc( 0s + .33s);}
  .b5,.b6{animation-delay:calc( 0s + 1s);}
  .b7,.b8{animation-delay:calc( 0s + 1.33s);}
  .b9{animation-delay:calc(     0s + 2s);}
  .b10{animation-delay:calc(    0s + 2s);}

@keyframes background-size{
  0%,40%,100%
  {
    height:var(--start_size);
    width:var(--start_size);
    border-radius:calc(var(--mid_size)/2);
    left:1rem;top:0rem;

  }
  20%
  {
    height:var(--mid_size);
    width:var(--mid_size);

    border-radius:calc(var(--mid_size)/2);
    left:1rem;top:0rem;

  }
  
}

</style>