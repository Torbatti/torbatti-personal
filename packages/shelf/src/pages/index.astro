---
import BaseLayout from "@ui/astro/layouts/BaseLayout.astro"
---
<BaseLayout title="طاقچه" description="" author="" key_words="">
  <div slot="header-right">
    <a href="/shelf/" class="tc3">طاقچه</a>
  </div>

  <div id="shelf" class="tc2 box flex aitems-start high-gap">

    <div id="shelf-book" class="shelf flex flex-col">
      <a href="/shelf/book/" class="tc3 text-medium">کتابخانه</a>

      <div id="items" class="flex low-gap">
        <p class="a">وضعیت:</p>
        <a href="/shelf/book/state/owned/" class="tc5">دارا</a>
        <a href="/shelf/book/state/wishlist/" class="tc5">خواهان</a>
      </div>

      <div id="items" class="flex low-gap">
        <p class="a">خواندن:</p>
        <a href="/shelf/book/state/plan/" class="tc5">انتظار</a>
      <a href="/shelf/book/state/reading/" class="tc5">درحال</a>
      <a href="/shelf/book/state/read/" class="tc5">خوانده</a>
      <a href="/shelf/book/state/drop/" class="tc5">پرتاب</a>
      </div>

      <div id="items" class="flex low-gap">
        <p class="a">ترین:</p>
        <a href="/shelf/book/rate/best/" class="tc5">بهترین</a>
        <a href="/shelf/book/rate/worst/" class="tc5">بدترین</a>
      </div>

      <div id="items" class="flex low-gap">
        <p class="a">اولیت:</p>
        <a href="/shelf/book/priority/buy/" class="tc5">خریدن</a>
        <a href="/shelf/book/priority/read/" class="tc5">خوندن</a>
      </div>

      <div id="items" class="flex low-gap">
        <p class="a">نوع:</p>
        <a href="/shelf/book/type/oneshot/" class="tc5">تک قسمت</a>
        <a href="/shelf/book/type/series/" class="tc5">مجموعه</a>
      </div>

      <div id="items" class="flex low-gap">
        <p class="a">بقیه موارد:</p>
        <a href="/shelf/book/critique/" class="tc5">نقد و بررسی</a>
      </div>

    </div>





    <div id="shelf-movie" class="shelf flex flex-col">
      <a href="/shelf/movie/" class="tc3 text-medium">آرشیو فیلم</a>

      <div id="items" class="flex low-gap">
        <p class="a">دیدن:</p>
        <a href="/shelf/movie/state/plan/" class="tc5">انتظار</a>
        <a href="/shelf/movie/state/watching/" class="tc5">درحال</a>
        <a href="/shelf/movie/state/watched/" class="tc5">دیده</a>
        <a href="/shelf/movie/state/pc/" class="tc5">پرتاب</a>
      </div>

      <div id="items" class="flex low-gap">
        <p class="a">ترین:</p>
        <a href="/shelf/movie/rate/best/" class="tc5">بهترین</a>
        <a href="/shelf/movie/rate/worst/" class="tc5">بدترین</a>
      </div>

      <div id="items" class="flex low-gap">
        <p class="a">اولیت:</p>
        <a href="/shelf/movie/priority/watch/" class="tc5">دیدن</a>
      </div>

      <div id="items" class="flex low-gap">
        <p class="a">نوع:</p>
        <a href="/shelf/movie/rate/worst/" class="tc5">سینمایی</a>
        <a href="/shelf/movie/rate/best/" class="tc5">سریال</a>
      </div>

      <div id="items" class="flex low-gap">
          <p class="a">بقیه موارد:</p>
          <a href="/shelf/movie/critique/" class="tc5">نقد و بررسی</a>
      </div>
    </div>




    <div id="shelf-animation" class="shelf flex flex-col">
      <a href="/shelf/animation/" class="tc3 text-medium">سبد کارتون</a>

      <div id="items" class="flex low-gap">
        <p class="a">دیدن:</p>
        <a href="/shelf/animation/state/plan/" class="tc5">انتظار</a>
        <a href="/shelf/animation/state/watching/" class="tc5">درحال</a>
        <a href="/shelf/animation/state/watched/" class="tc5">دیده</a>
        <a href="/shelf/animation/state/pc/" class="tc5">پرتاب</a>
      </div>

      <div id="items" class="flex low-gap">
        <p class="a">ترین:</p>
        <a href="/shelf/animation/rate/best/" class="tc5">بهترین</a>
        <a href="/shelf/animation/rate/worst/" class="tc5">بدترین</a>
      </div>

      <div id="items" class="flex low-gap">
        <p class="a">اولیت:</p>
        <a href="/shelf/animation/priority/watch/" class="tc5">دیدن</a>
      </div>

      <div id="items" class="flex low-gap">
        <p class="a">نوع:</p>
        <a href="/shelf/animation/rate/worst/" class="tc5">سینمایی</a>
        <a href="/shelf/animation/rate/best/" class="tc5">سریال</a>
      </div>

      <div id="items" class="flex low-gap">
          <p class="a">بقیه موارد:</p>
          <a href="/shelf/animation/critique/" class="tc5">نقد و بررسی</a>
      </div>
    </div>

    




    <div id="shelf-game"class="shelf flex flex-col">
      <a href="/shelf/game/" class="tc3 text-medium">چاه بازی</a>

      <div id="items" class="flex low-gap">
        <p class="a">پلتفرم:</p>
        <a href="/shelf/game/platform/pc/" class="tc5">pc</a>
        <a href="/shelf/game/platform/psx/" class="tc5">psx</a>
        <a href="/shelf/game/platform/xbox/" class="tc5">xbox</a>
        <a href="/shelf/game/platform/other/" class="tc5">other</a>
      </div>

      <div id="items" class="flex low-gap">
        <p class="a">وضعیت:</p>
        <a href="/shelf/game/state/owned/" class="tc5">دارا</a>
        <a href="/shelf/game/state/wishlist/" class="tc5">خواهان</a>
      </div>

      <div id="items" class="flex low-gap">
        <p class="a">بازیدن:</p>
        <a href="/shelf/game/state/plan/" class="tc5">انتظار</a>
        <a href="/shelf/game/state/playing/" class="tc5">درحال</a>
        <a href="/shelf/game/state/played/" class="tc5">بازونده</a>
        <a href="/shelf/game/state/drop/" class="tc5">پرتاب</a>
      </div>
      
      <div id="items" class="flex low-gap">
        <p class="a">ترین:</p>
        <a href="/shelf/game/rate/best/" class="tc5">بهترین</a>
        <a href="/shelf/game/rate/worst/" class="tc5">بدترین</a>
      </div>


      <div id="items" class="flex low-gap">
        <p class="a">اولیت:</p>
        <a href="/shelf/game/priority/play/" class="tc5">بازیدن</a>
        <a href="/shelf/game/priority/buy/" class="tc5">خریدن</a>
      </div>

      <div id="items" class="flex low-gap">
        <p class="a">بقیه موارد:</p>
        <a href="/shelf/game/critique/" class="tc5">نقد و بررسی</a>
      </div>
    </div>



  </div>
</BaseLayout>

<style>
  .a,a{text-decoration:none;font-size:small;font-weight:bold;}
  a:hover{text-decoration:underline;}

  @media(max-width:768px){
    #items{
      gap:1rem;
    }
    #shelf{
      flex-direction:column;
      gap:2rem;
    }
    .shelf{
      gap:0.5rem;
    }
  }
  #shelf{
		min-height: calc(100vh - 6rem);
    padding:8px;
		border-right:2px solid var(--c3);
	}
  @media(min-width:768px){
		#shelf{
			border:2px solid var(--c3) ;
		}
  }
</style>