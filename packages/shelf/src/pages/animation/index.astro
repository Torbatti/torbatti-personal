---
import ShelfLayout from "../_ShelfLayout.astro";

// ! THIS IS NOT A MISTAKE
// ! NO POCKET BASE SERVER IN PROD
import pb from "../../libs/pocketbase";

const adminData = await pb.admins.authWithPassword('admin@example.com', 'admin@example.com');
const records = await pb.collection('animations').getFullList({sort: 'animation_title',});
// console.log(records);
---
<ShelfLayout title="سبد کارتون" description="" author="" key_words="" child_url="animation">

  <div id="posts" class="flex flex-wrap high-gap">
    {records.map((post)=>(
      <div id="post" class="tc2 flex flex-col jcontent-center aitems-center">
        <p class="tc5">{post.animation_title}</p>

        <div id="post-genre">
          <p>{post.animation_genre} </p>
        </div>
        <div id="post-details" class="flex low-gap">
          <p>{post.release_date} </p>

          {
            (post.animation_state === "plan") 
            ?<p>{post.animation_state} </p> 
            :<p>{post.animation_state} </p><p>{post.animation_rate}/10</p>
          }
          {
            (post.animation_seasons !== "") 
            ?<p>S:{post.animation_seasons}</p>
            :<></>
          }
        </div>
      </div>
    ))}
  </div>

</ShelfLayout>

<style>
  #post{font-weight: bold;font-size:small;}
  #posts{
    direction:ltr;
  }
  @media(max-width:768px){
    #posts{
      flex-direction:column;
      gap:1rem;
      align-items:start;
    }
    #posts #post{
      align-items:start;
    }
  }

</style>