---

// utils import
import { slugify , formatDate } from "../../scripts/utils";


// lib import
import { Image, Picture } from '@astrojs/image/components';

// Frontammer 
const { frontmatter }= Astro.props;
const { title,description,date,category,author,image } = frontmatter;
---
<header class="vbox flex flex-col aitems-center">
  <small>
    <a href={`/category/${slugify(category)}/`} class="tc3">{category}</a>
  </small>
  <h1>{title}</h1>
  <p>by <a href={`/author/${slugify(author)}/`} class="tc2">{author}</a> . {formatDate(date)} </p>

  <Image 
  src={image.src}
  alt={image.alt}
  width={1920}
  height={1080}
  format="avif"
  fit="cover"
  quality={80}
  aspectRatio="5:2"
  />
</header>

<style>
  header img{
    width:100%;
    height:40vw;
    border-radius:4px;
    box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
  }
  @media(min-width:1280px){
    header img{
      height:35rem;
    }
  }
</style>