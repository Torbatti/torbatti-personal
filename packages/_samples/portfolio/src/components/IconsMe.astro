---


// lib import
import { Image, Picture } from '@astrojs/image/components';
---

<div id="iconsMe" class="vbox flex jcontent-evenly aitems-center">
  <Image src="images/icons/vue.svg" width={32} height={32} alt="" format="svg"/>
  <Image src="images/icons/sass.svg" width={32} height={32} alt="" format="svg"/>
  <Image src="images/icons/docker.svg" width={32} height={32} alt="" format="svg"/>
  <Image src="images/icons/pocketbase.svg" width={32} height={32} alt="" format="svg"/>
  <Image src="images/icons/astro.svg" width={32} height={32} alt="" format="svg"/>
  <Image src="images/icons/next.svg" width={32} height={32} alt="" format="svg"/>
  <Image src="images/icons/tailwind.svg" width={32} height={32} alt="" format="svg"/>
  <Image src="images/icons/svelte.svg" width={32} height={32} alt="" format="svg"/>
  <Image src="images/icons/git.svg" width={32} height={32} alt="" format="svg"/>
  <Image src="images/icons/nuxt.svg" width={32} height={32} alt="" format="svg"/>
  <Image src="images/icons/react.svg" width={32} height={32} alt="" format="svg"/>
</div>

<style>
  #iconsMe{
    margin:0rem auto;
    height:3rem;
    background-color:var(--c3);
    overflow-x:hidden;
  }
  img{margin:0 2rem;
    position: relative;
    animation-name: image;
    animation-duration:12s;
    animation-iteration-count: infinite;
  }
  img:hover{filter: grayscale(0%);}


  @keyframes image {
  0%   {right:-5rem;}
  50%  {right:5rem;}
  100% {right:-5rem;}
}
</style>