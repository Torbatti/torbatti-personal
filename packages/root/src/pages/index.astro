---
import BaseLayout from "../../../_ui/astro/layouts/BaseLayout.astro"

import BaseHeader from "../../../_ui/astro/components/BaseHeader.astro"

---
<BaseLayout title="صفحه اصلی" description="" author="" key_words="">
  <BaseHeader>
    <div id="header-left_slot" class="flex aitems-center mid-gap" slot="header-left">
      <a href="/blog/" class="tc3">بلاگ</a>
      <a href="/projects/" class="tc3">پروژگان</a>
      <a href="/shelf/" class="tc3">طاقچه</a>
    </div>
  </BaseHeader>
  <div id="introPage" class="box flex flex-col jcontent-between tc2">
    <div>
      <div class="intro-main_titles">
        <h1 class="intro-creative_title"> خلاق </h1>
        <h1 class="text-xxlarge tc3"> طراح </h1>
        <h1 class="text-xxlarge tc2">  نویسنده </h1>
        <h1 class="text-xxlarge tc5"> برنامه نویس </h1>
      </div>
      <a href="/contact/">
        <div class="intro-contact_button bc3 tc2 d-tbg-change">
          ارتباط با من
        </div>
      </a>
    </div>

    <h5 class="intro-text">

      آریا بختیاری
      <br>
      متولد ۱۳۸۱ 
      <br>
      تهران , ایران
      <br>
      آرچ , لینوکس
      <br>
      عاشق اوپن سورس
      <br>
      کتاب , نقاشی , فیلم 
      

    </h5>

    <div class="index-links flex flex-wrap low-gap">
      <a href="/about/" class="index-link d-tbg-change"> درباره </a>
      <a href="/blog/" class="index-link d-tbg-change"> بلاگ </a>
      <a href="/projects/" class="index-link d-tbg-change"> پروژه گان </a>
      <a href="/shelf/" class="index-link d-tbg-change"> طاقچه </a>
      <a href="" class="index-link d-tbg-change"> نرم افزار </a>
      <a href="" class="index-link d-tbg-change"> سخت افزار </a>
      <!-- <a href="" class="index-link d-tbg-change" target="_blank" rel="noopener noreferrer"> کاسپین وب </a>
      <a href="" class="index-link d-tbg-change" target="_blank" rel="noopener noreferrer"> آسان کار </a> -->
    </div>
  </div>
</BaseLayout>

<div id="footer" class="tc2 text-small text-bold box flex aitems-center">
  <small>
    Copyright &copy;
    <span id="copyright" class="text-small text-bold"></span>
    | All rights reserved
  </small>
</div>

<script type="module">
  document.querySelector("#copyright").textContent= new Date().getFullYear().toString();
</script>

<style>
  #footer{height:3rem;}
</style>

<style>
  #header-left_slot a{text-decoration:none;font-size:small;font-weight: bold;}
  #header-left_slot a:hover{text-decoration:underline;}



	a{text-decoration: none;}
	#introPage{
		height: calc(100vh - 6rem);
		border-right:2px solid var(--c3);
	}
	.intro-creative_title{
		position:absolute;display:flex;z-index:-1; transform:rotate(90deg) translate(2rem,-4.5rem);font-size:4rem;
		background: -webkit-linear-gradient(180deg,#131515 ,#339989,#339989,#339989,#339989,#131515);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		border-top:2px dashed var(--c3);

	}

	.intro-main_titles{margin-right:3rem;}
	.intro-creative_text{margin-right:1rem;}
	.intro-contact_button{
		width:9rem;padding:0.25rem;
		padding-right:3rem;margin-top:1rem;border-radius:0.8rem 0 0 0.8rem;
		background: -webkit-linear-gradient(235deg ,#339989,#339989,#131515);
		cursor: pointer;
	}
	.intro-contact_button:hover{
		color:var(--c1);
	}

	span{font-size:larger;}
	.aboutMe-text{
		direction: ltr;
	}

	.intro-contact_links{
		padding:1rem 3.5rem;		
	}

	.index-info{
		direction:ltr;
	}


	@media(max-width:768px){
		.index-links{
			width:20rem;
		}
	}
	.index-link{
		background-color:var(--c3);
		color:var(--c2);
		padding:.15rem .45rem;
		background: -webkit-radial-gradient(#326e66,#339989);
	}
	.index-link:hover{
		color:var(--c1);
	}

	.intro-text{
		direction:ltr;
		border-left:2px dashed var(--c3);
		padding-left:4px;
	}
	@media(min-width:768px){
		#introPage{
			border:2px solid var(--c3) ;
		}
		.intro-text{
			font-size:medium;
			border:2px dashed var(--c3);
			padding: 4px;
			position:fixed;
			bottom:3.5rem;
			left:1.5rem;
		}
	}
</style>