---
import BaseLayout from "@layouts/BaseLayout.astro";

import Bgeffect from "@components/index/Bgeffect.astro";
import Orbit from "@components/index/Orbit.astro"

---
<BaseLayout title="صفحه اصلی" description="" author="" key_words="">
  <div id="main_box" class="box flex flex-col jcontent-between tc2">
		<Bgeffect/>
		<Orbit/>
		<div class="text-large text-bold">
			<p class="tc3 text-xlarge">آریا بختیاری</p>
			<p>طراح , نویسنده , </p>
			<p>برنامه نویس</p>
		</div>
		<div id="future_is_now" class="low-gap text-large text-bold">
			<p>یک قدم تا</p>
			<p class="tc5 text-xxlarge">آینده </p>
			<a href="/contact/" id="contact_button" class="text-none">ارتباط با من</a>
		</div>

		<div>
			
		</div>
  </div>
	<div id="index-links" class="box flex flex-wrap low-gap text-small">
		<a href="/contact/" class="index-link d-tbg-change"> ارتباط </a>
		<a href="/about/" class="index-link d-tbg-change"> درباره </a>
		<a href="/blog/" class="index-link d-tbg-change"> بلاگ </a>
		<a href="/shelf/" class="index-link d-tbg-change"> طاقچه </a>
		<a href="/museum/" class="index-link d-tbg-change"> موزه </a>
		<a href="/project/" class="index-link d-tbg-change"> پروژه گان </a>
		<a href="https://caspian-web.ir" class="index-link d-tbg-change" target="_blank" rel="noopener noreferrer"> کاسپین وب </a>
		<a href="https://asan-kar.ir" class="index-link d-tbg-change" target="_blank" rel="noopener noreferrer"> آسان کار </a>
		<a href="https://griz.ir" class="index-link d-tbg-change" target="_blank" rel="noopener noreferrer"> گریز </a>
	</div>
</BaseLayout>

<style>
	a{text-decoration: none;}
	#main_box{
		min-height: calc(100vh - 8rem);
		border:2px solid var(--c3) ;
		border-radius:.25rem;
		padding:.5rem;
		
	}

	#future_is_now{
		text-align: center;
		min-height: 2rem;
		width:8rem;
		position: absolute;
		top: calc(50vh - 6.5rem);
		left: 7rem;
		display:flex;
		flex-direction: column;
		gap: 1rem;
	}
	#future_is_now a#contact_button{
		width: 14rem;
		background-color: var(--c3);
		color: var(--c1);
		padding:.25rem .5rem;
		border-radius:0 .25rem .25rem 0;

		background-size: 2px 2px;
    background-image:  repeating-linear-gradient(0deg, var(--c1), var(--c3) 1px, transparent 1px, transparent);
		transition: background-image 2s;
	}
	#future_is_now a#contact_button:hover{
		background-size: 2px 2px;
    background-image:  repeating-linear-gradient(45deg, var(--c1), var(--c3) 1px, transparent 1px, transparent);
	}



	@media(max-width:768px){
		#main_box{
			min-height: calc(100vh - 10rem);
		}
	}
	#index-links{
		margin:.25rem auto;	
	}
	.index-link{
		background-color:var(--c3);
		color:var(--c2);
		padding:.125rem 1rem;
		background: -webkit-radial-gradient(#326e66,#339989);
		border-radius: 2px;
	}
	.index-link:hover{
		color:var(--c1);
	}

</style>