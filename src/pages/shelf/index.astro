---
import BaseLayout from "@layouts/BaseLayout.astro"

const topics = await Astro.glob('./*s/*.md');
// const todos = await Astro.glob('./todos/*.md');


const games = await Astro.glob('./games/**/*.md');
const movies = await Astro.glob('./movies/**/*.md');
const animations = await Astro.glob('./animations/**/*.md');
const vlogs = await Astro.glob('./vlogs/**/*.md');
const news = await Astro.glob('./news/**/*.md');
const books = await Astro.glob('./books/**/*.md');

---
<BaseLayout title="بلاگ" description="" author="" key_words="">
	<div slot="header-right">
    <a href="/blog/" class="tc3">بلاگ</a>
  </div>

  <div id="main_box" class="box flex mid-gap">

		<div id="topics">
			{topics.map((post) => (
				<a href={post.url} class="tc5 text-small flex low-gap">{post.frontmatter.title}</a>
			))}
		</div>

		<div id="vlogs">
			{vlogs.map((post) => (
				<a href={post.url} class="tc2 text-small flex low-gap">{post.frontmatter.title}</a>
			))}
		</div>

		<div id="news">
			{news.map((post) => (
				<a href={post.url} class="tc2 text-small flex low-gap">{post.frontmatter.title}</a>
			))}
		</div>


		<div id="games">
			{games.map((post) => (
				<a href={post.url} class="tc2 text-small flex low-gap">{post.frontmatter.title}</a>
			))}
		</div>

		<div id="movies">
			{movies.map((post) => (
				<a href={post.url} class="tc2 text-small flex low-gap">{post.frontmatter.title}</a>
			))}
		</div>

		<div id="animations">
			{animations.map((post) => (
				<a href={post.url} class="tc2 text-small flex low-gap">{post.frontmatter.title}</a>
			))}
		</div>

		<div id="books">
			{books.map((post) => (
				<a href={post.url} class="tc2 text-small flex low-gap">{post.frontmatter.title}</a>
			))}
		</div>

  </div>

	
	
</BaseLayout>

<style>

	#main_box{
		min-height: calc(100vh - 6rem);
		border:2px solid var(--c3) ;
		border-radius:.25rem;
		padding:.5rem;
	}
	#main_box a{text-decoration:none;}
	#main_box a:hover{text-decoration:underline;}

	@media(max-width:768px)
	{
		#main_box{
			flex-direction:column;
			gap:2rem;
		}
		#main_box div{
			display:flex;
			flex-wrap:wrap;
			gap: 8px;
		}
		#main_box div a{
			background: linear-gradient(var(--c1) ,var(--c1)) padding-box,
									linear-gradient(to right top, #339989, #27695f, #339989) border-box;
			border: 2px solid transparent;
			border-radius:4px;
			padding:4px;
		}
	}
	@media(min-width:768px)
	{
		#main_box div{
			display:flex;
			flex-direction:column;
			align-items:center;
		}

	}

</style>